<html>
  <head>
    <title>A Simple ToDo List App</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <h2>A Simple ToDo List App</h2>

      <form action="/add" method="POST">
        <input type="text" name="newList" placeholder="add new list" />
        <button>Add Task</button>
         
        <h2>Added Task</h2>

        <% for(let i = 0; i < list.length; i++){ %> 
        <li>
          <input type="checkbox" name="check" value="<%= list[i] %>" /> <%=
          list[i] %>
        </li>
          <% } %>

        <button formaction="/completed" type="submit">Complete</button>
      </form>

      <h2>Completed Task</h2>

      <% for(let i = 0; i < complete.length; i++){ %>
        <li>
          <input type="checkbox" checked/><%= complete[i] %>
        </li>
      <% } %>
    </div>
  </body>
</html>
